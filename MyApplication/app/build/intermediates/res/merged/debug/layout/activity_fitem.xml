<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.shirang.myapplication.FItem">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/checkBoxEdit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/buttonFItemSave"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carbs"
        android:id="@+id/textViewCarbs"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fat"
        android:id="@+id/textViewFat"
        android:layout_below="@+id/textViewCarbs"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Protien"
        android:id="@+id/textViewProtien"
        android:layout_below="@+id/textViewFat"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unit"
        android:id="@+id/textView"
        android:layout_marginBottom="37dp"
        android:layout_above="@+id/editTextQtyVal"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewUnit"
        android:layout_alignTop="@+id/textView"
        android:layout_toEndOf="@+id/buttonFItemSave" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:id="@+id/textView2"
        android:layout_marginBottom="41dp"
        android:layout_above="@+id/textViewCarbs"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextQtyVal"
        android:text="1.0"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignStart="@+id/editTextCarbsVal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:id="@+id/idbuttonUpdate"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/checkBoxEdit"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextCarbsVal"
        android:layout_alignBaseline="@+id/textViewCarbs"
        android:layout_alignBottom="@+id/textViewCarbs"
        android:layout_toEndOf="@+id/textViewUnit" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextFatVal"
        android:layout_alignBottom="@+id/textViewFat"
        android:layout_toEndOf="@+id/textViewUnit" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextProtienVal"
        android:layout_alignBottom="@+id/textViewProtien"
        android:layout_toEndOf="@+id/textViewUnit" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextFItemCaloriesVal"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textViewProtien"
        android:layout_toEndOf="@+id/textViewUnit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories"
        android:id="@+id/textViewCalories"
        android:layout_alignBottom="@+id/editTextFItemCaloriesVal"
        android:layout_alignParentStart="true" />

</RelativeLayout>
